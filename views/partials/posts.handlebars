<div class="card text-white bg-dark mb-3">
    <span><a href="/post/{{id}}" style="text-align: center;">{{title}}</a></span>
    <br>
    <br>
    <span>
        Posted by {{user.name}} on {{format_date created_at}}
    </span>
    <br>
    <br>
    <div class="content">
        <p>{{post_body}}</p>
    </div>
    <span>
        <a href="/post/{{id}}">{{comments.length}} comments</a>
    </span>
</div>